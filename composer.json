{
	"name": "arkadiivodolazskyi/ideals-weeknds",
	"description": "Test task for iDeals",
	"authors": [
		{
			"name": "Arkadii Vodolazskyi",
			"homepage": "https://github.com/ArkadiiVodolazskyi/"
		}
	],
	"type": "project",
	"repositories": [
		{
			"type": "composer",
			"url": "https://wpackagist.org"
		}
	],
	"config": {
		"vendor-dir": "vendor",
		"allow-plugins": {
			"johnpbloch/wordpress-core-installer": true,
			"composer/installers": true
		}
	},
	"require": {
		"php": ">=7.4",
		"johnpbloch/wordpress": ">=6.1.1",
		"wpackagist-plugin/classic-widgets":"0.3"
	},
	"require-dev": {},
	"extra": {
		"wordpress-install-dir": "public",
		"installer-paths": {
      "public/content/plugins/{$name}/": ["type:wordpress-plugin"]
    }
	},
	"scripts": {
		"post-install-cmd": "cp -r src/plugins/advanced-custom-fields-pro public/content/plugins; cp wp-config.php public/wp; unzip uploads.zip -d public/content"
	}
}
